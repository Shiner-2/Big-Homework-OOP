<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hhd.TranslatorController">
   <children>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="25.0" layoutY="25.0" onMouseClicked="#LoadApp">
         <image>
            <Image url="@../../../img/images-removebg-preview-removebg-preview.png" />
         </image>
      </ImageView>
      <Label fx:id="lbLeft" layoutX="25.0" layoutY="156.0" text="Vietnamese">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="lbRight" layoutX="325.0" layoutY="156.0" text="English">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="275.0" layoutY="215.0" onMouseClicked="#changeLanguage">
         <image>
            <Image url="@../../../img/2wayarrow.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="110.0" fitWidth="200.0" layoutX="208.0" layoutY="20.0">
         <image>
            <Image url="@../../../img/Translator-removebg-preview.png" />
         </image>
      </ImageView>
      <TextArea fx:id="TFLeft" layoutX="25.0" layoutY="190.0" prefHeight="100.0" prefWidth="250.0" />
      <TextArea fx:id="TFRight" disable="true" layoutX="325.0" layoutY="190.0" prefHeight="100.0" prefWidth="250.0" promptText="Press Translate and wait a bit">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <Button layoutX="208.0" layoutY="157.0" mnemonicParsing="false" onAction="#translate" text="Translate" />
   </children>
</AnchorPane>
